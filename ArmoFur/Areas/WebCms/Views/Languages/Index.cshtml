@model IEnumerable<ArmoFur.Models.BLL.Language>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/WebCms/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-6 my-4 mx-auto">
        <div class="card shadow mb-4">
            <div class="card-header py-4">
                Dillərin Siyahısı
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between my-3">
                    <a href="#" data-action="Languages" class="btn btn-outline-info confirmqueue"><i class="fas fa-sort"></i> Sirala</a>
                    <a asp-action="Create" class="btn btn-outline-dark"><i class="fas fa-fw fa-plus"></i> Dil əlavə et</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-shorting">
                        <thead>
                            <tr>
                                <th>
                                    Dil Kodu
                                </th>
                                <th>
                                    Dil Adı
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr data-id="@item.Id">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Code)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn text-primary"><i class="fas fa-fw fa-pencil-alt"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn text-warning" onclick="return confirm('Silmək istədiyinizdən əminsiniz?')"><i class="fas fa-fw fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


